---
import { Image } from 'astro:assets';

const { image, imageAlt, ...props } = Astro.props;
---

<article class="flex gap-4 rounded-md even:flex-row-reverse">
    <Image src={image} class="aspect-square max-w-64 rounded-md border shadow-xl dark:border-zinc-800 print:hidden"
         alt={imageAlt} />
    <div class="p-4 print:p-0 print:pl-4 flex flex-col rounded-md print:rounded-none shadow-xl print:shadow-none border print:border-0 print:border-l-2 dark:border-zinc-800 z-10 bg-white dark:bg-zinc-800 w-full">
        <slot/>
    </div>
</article>