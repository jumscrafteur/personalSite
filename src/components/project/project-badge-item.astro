---
import { getEntry } from "astro:content";

interface Props {
    id: string;
}
const { id} = Astro.props;

const badgeEntry = await getEntry("badges", id)

const {badgeText, color, iconName, iconColor} = badgeEntry.data
---

<img alt={badgeText} loading="lazy"
     src={"https://img.shields.io/badge/-" + badgeText + "-" + color.substring(1) + "?style=flat-square&logo=" + iconName + "&logoColor=" + iconColor}/>